
<%= form_with(model: @listing, url: create_listing_path(@coach)) do |form| %>
    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div class="field">
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <div class="field">
        <%= form.label :term_weeks %>
        <%= form.number_field :term %>
    </div>

    <div class="field">
        <%= form.label :location %>
        <%= form.text_area :location %>
    </div>

    <div>
    <%= form.label :picture %> <%= form.file_field :picture, accept:'image/png,image/gif,image/jpeg,image/jpg'%>
    </div>
    
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>