<%= form_with(model: coach, local: true) do |form| %>

    <div class="field">
        <%= form.label :business_name %>
        <%= form.text_field :business_name %>
    </div>

    <div class="field">
        <%= form.label :business_mobile %>
        <%= form.telephone_field :business_mobile %>
    </div>    

    <div class="field">
        <%= form.label :bio %>
        <%= form.text_area :bio %>
    </div>
    
    <div class="field">
        <%= form.label :children_check %>
        <%= form.check_box :children_check %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>